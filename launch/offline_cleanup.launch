<launch>
  <arg name="no_rviz" default="true"/>
  <param name="/use_sim_time" value="true" />

  <node name="flat_world_imu_node" pkg="cartographer_turtlebot"
        type="cartographer_flat_world_imu_node" output="screen">
    <remap from="imu_in" to="/mobile_base/sensors/imu_data_raw" />
    <remap from="imu_out" to="/imu" />
  </node>



  <node pkg="rosbag" type="play" name="replay" args="--clock $(arg bagfile)"/>
  <node pkg="rosbag" type="record" name="rec"
    args="-O $(arg bagfile).clean /tf /imu"/>

</launch>
