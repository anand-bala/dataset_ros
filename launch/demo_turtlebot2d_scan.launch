<launch>
  <param name="/use_sim_time" value="true" />

  <include file="$(find dataset_ros)/launch/just-vlp.launch">
    <arg name="vlp_start" value="false"/>
  </include>
  <arg name="save_file" default="cartographer-session"/>

  <node name="cartographer_node" pkg="cartographer_ros"
        type="cartographer_node" args="
          -configuration_directory $(find dataset_ros)/configuration_files
          -configuration_basename turtlebot2d.lua"
        output="screen">
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />

  <node name="flat_world_imu_node" pkg="cartographer_turtlebot"
        type="cartographer_flat_world_imu_node" output="screen">
    <remap from="imu_in" to="/mobile_base/sensors/imu_data_raw" />
    <remap from="imu_out" to="/imu" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz"
      args="-d $(find cartographer_ros)/configuration_files/demo_2d.rviz" />
  
</launch>
